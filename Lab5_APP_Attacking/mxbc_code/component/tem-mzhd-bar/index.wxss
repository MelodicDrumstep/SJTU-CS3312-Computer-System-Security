.gift-progress-container {
    -webkit-box-align: center;
    -webkit-box-pack: justify;
    -webkit-align-items: center;
    align-items: center;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    padding: 4rpx 0;
    width: 346rpx
}

.disabled_4,.disabled_5 {
    opacity: .3
}

.gift-icons {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    width: 284rpx
}

.gift-icon-item,.gift-icons {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex
}

.gift-icon-item {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
    margin: 0 4rpx
}

.gift-icon {
    overflow: hidden
}

.gift-icon,.gift-image {
    height: 28rpx;
    width: 28rpx
}

.gift-value {
    color: #333;
    font-size: 24rpx
}

.connector-line {
    -webkit-box-flex: 1;
    border-radius: 4rpx;
    -webkit-flex: 1;
    flex: 1;
    height: 4rpx;
    margin: 0 4rpx
}

.connector-line.active {
    background-color: #fc3f41
}

.connector-line.inactive {
    background-color: #ffe1e3
}
