.vtabs {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: relative;
    width: 100%
}

.vtabs-bar__wrp {
    background-color: #f8f8f8;
    height: 100%;
    width: 160rpx
}

.vtabs-bar__scrollview {
    border-top-right-radius: 12rpx;
    height: 100%;
    overflow-x: hidden
}

.vtabs-bar__item {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    box-sizing: border-box;
    -webkit-flex-direction: column;
    flex-direction: column;
    font-size: 24rpx;
    line-height: 36rpx;
    overflow: hidden;
    padding: 36rpx 14rpx;
    position: relative;
    text-align: center;
    width: 100%
}

.category-icon {
    height: 56rpx;
    margin-bottom: 8rpx;
    width: 56rpx
}

.category-corner-mark {
    font-weight: 500;
    position: absolute;
    right: 8rpx;
    top: 8rpx
}

.vtabs-content__wrp {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    overflow: hidden
}

.vtabs-content__scrollview,.vtabs-content__wrp {
    height: 100%;
    position: relative
}

.vtabs-bar__item.active {
    background-color: #fff;
    color: #333;
    font-weight: 500
}

.vtabs-bar__item.active::before {
    background-color: #ff192b;
    content: "";
    height: 48rpx;
    left: 0;
    position: absolute;
    top: calc(50% - 24rpx);
    width: 4rpx
}

.fillet-up {
    border-bottom-right-radius: 12rpx
}

.fillet-down {
    border-top-right-radius: 12rpx
}

.number-icon {
    font-weight: 400;
    right: 4rpx;
    top: 10rpx
}
