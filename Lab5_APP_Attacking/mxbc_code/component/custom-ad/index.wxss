.ad-banner {
    overflow: hidden;
    width: 100%
}

.ad-banner .ad-img {
    border-radius: var(--card-radius);
    height: 100%;
    margin: auto;
    width: 100%
}

.ad-popup {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column
}

.ad-popup__center .ad-img {
    width: 80vw
}

.ad-popup__center .ad-close {
    line-height: 60rpx;
    margin-top: 20rpx
}

.ad-popup__bottom .ad-img {
    width: 100vw
}

.ad-popup__bottom .ad-close {
    position: absolute;
    right: 48rpx;
    top: 0
}

.ad-suspension {
    bottom: 168rpx;
    position: fixed;
    right: 16rpx;
    text-align: right;
    -webkit-transform: translateX(0);
    transform: translateX(0);
    -webkit-transition: all .5s ease;
    transition: all .5s ease;
    z-index: 90
}

.ad-suspension .ad-img {
    display: block;
    height: 96rpx;
    width: 96rpx
}

.ad-suspension .close-img {
    height: 24rpx;
    width: 24rpx
}

.ad-suspension.ani-fold {
    opacity: .6;
    -webkit-transform: translateX(42px);
    transform: translateX(42px)
}

.ad-suspension_ad_banner {
    bottom: 44rpx;
    position: fixed;
    right: 28rpx;
    -webkit-transform: translateY(0);
    transform: translateY(0);
    -webkit-transition: all .5s ease;
    transition: all .5s ease;
    z-index: 99
}

.ad-suspension_ad_banner .ad-img {
    border-radius: var(--card-radius);
    display: block;
    height: auto;
    width: 686rpx
}

.ad-suspension_ad_banner .close-img {
    height: 32rpx;
    position: absolute;
    right: 8rpx;
    top: 8rpx;
    width: 32rpx
}

.index-take_no {
    bottom: 48rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 0;
    height: 102rpx;
    left: 16rpx;
    padding: 14rpx 20rpx 0 60rpx;
    position: fixed;
    text-align: center;
    -webkit-transition: all .5s ease;
    transition: all .5s ease;
    width: 176rpx;
    z-index: 10
}

.take-no-icon {
    bottom: 0;
    display: block;
    height: 102rpx;
    left: 0;
    position: absolute;
    width: 176rpx;
    z-index: -1
}

.index-take_no .close-img {
    height: 24rpx;
    position: absolute;
    right: 6rpx;
    top: -32rpx;
    width: 24rpx
}

.index-take_no.take_no-fold {
    opacity: .6;
    -webkit-transform: translateX(-76px);
    transform: translateX(-76px)
}
