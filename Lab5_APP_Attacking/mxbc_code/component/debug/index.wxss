.debug-badge {
    bottom: 20rpx;
    height: 60rpx;
    position: fixed;
    right: 50rpx;
    width: 60rpx;
    z-index: 200
}

.debug-popup {
    -webkit-overflow-scrolling: touch;
    max-height: 80vh;
    min-height: 40vh;
    overflow-y: auto
}

.table-title {
    margin: 20rpx 0;
    text-align: center
}

.table-cell {
    background: #fff;
    font-size: 28rpx;
    padding: 0 24rpx
}

.cell-icon {
    min-width: 200rpx
}

.select-item {
    border: 1px solid #e6e6e6;
    border-radius: 12rpx;
    color: #777;
    display: inline-block;
    font-size: 26rpx;
    margin: 10rpx;
    padding: 8rpx 24rpx;
    text-align: center
}

.select-item.active {
    background: #fff7f8;
    border-color: #ffbfc6;
    color: #e60012
}

.vertion-input {
    border: 1rpx solid #e6e6e6;
    padding: 6rpx 10rpx;
    width: 260rpx
}

.icon-clear {
    height: 100%;
    position: absolute;
    right: 110rpx;
    top: 0;
    width: 80rpx;
    z-index: 9
}
