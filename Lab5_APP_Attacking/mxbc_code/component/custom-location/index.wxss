.location-page {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    height: 100vh;
    -webkit-justify-content: center;
    justify-content: center;
    left: 0;
    position: fixed;
    top: 0;
    width: 100vw;
    z-index: 300
}

.location-page.inline {
    left: 0;
    position: relative;
    top: 0
}

.no-location-permission {
    color: #777;
    text-align: center;
    width: 100vw
}

.to-search {
    -webkit-box-align: center;
    -webkit-box-pack: start;
    -webkit-align-items: center;
    align-items: center;
    background: rgba(21,10,94,.05);
    border-radius: 32rpx;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 64rpx;
    -webkit-justify-content: flex-start;
    justify-content: flex-start;
    margin-left: 24rpx;
    padding: 0 var(--theme-padding);
    width: 504rpx
}

.no-permission-img {
    width: 220px
}

.btn-jump {
    background: #fff;
    border: 1rpx solid #aaa;
    box-sizing: border-box;
    color: #333;
    margin: 0 auto 24rpx;
    padding: 0 26rpx;
    width: 598rpx
}

.tip-jump {
    color: #777;
    font-size: 24rpx;
    line-height: 36rpx;
    text-align: center
}
