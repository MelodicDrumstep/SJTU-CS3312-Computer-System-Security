.order_rule_container {
    padding: 40rpx 32rpx
}

.order_rule_container .icon-close {
    border: 2rpx solid #fff;
    border-radius: 50rpx;
    box-sizing: border-box;
    color: #fff;
    height: 48rpx;
    line-height: 48rpx;
    padding-left: 4rpx;
    position: fixed;
    right: 24rpx;
    text-align: center;
    top: -72rpx;
    width: 48rpx
}

.order_rule_scrollview {
    -webkit-overflow-scrolling: touch;
    max-height: 50vh;
    overflow: scroll;
    position: relative
}

.order_rule_text {
    color: #333;
    font-size: 24rpx;
    line-height: 36rpx;
    text-align: justify;
    white-space: pre-wrap
}
