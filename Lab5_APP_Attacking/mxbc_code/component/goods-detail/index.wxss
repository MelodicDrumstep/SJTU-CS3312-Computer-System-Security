@import "index.skeleton.wxss";

.goods-detail.center {
    box-sizing: border-box;
    padding: 32rpx;
    position: relative
}

.goods-detail.center .img-text-row {
    height: 216rpx;
    padding-left: 232rpx;
    position: relative;
    width: 348rpx
}

.goods-detail.center .product-desc {
    -webkit-overflow-scrolling: touch;
    margin: 16rpx 0 10rpx;
    max-height: 144rpx;
    overflow-y: scroll;
    white-space: pre-wrap
}

.goods-detail.center .goods-img {
    border-radius: var(--card-radius);
    height: 216rpx;
    left: 0;
    position: absolute;
    top: 0;
    width: 216rpx
}

.goods-detail.center .goods-desc {
    font-size: 22rpx;
    position: inherit
}

.goods-detail.center .attrs-item {
    -webkit-overflow-scrolling: touch;
    max-height: 50vh;
    overflow-x: hidden;
    overflow-y: scroll;
    padding-bottom: 32rpx
}

.goods-detail.center .add-to-cart {
    height: 88rpx;
    margin-top: 32rpx;
    position: relative
}

.goods-detail .number-buttons {
    font-size: 48rpx;
    position: static;
    width: 170rpx
}

.goods-detail.center .close-img {
    height: 48rpx;
    padding: 24rpx var(--theme-padding);
    position: fixed;
    right: 0;
    top: 0;
    width: 48rpx
}

.goods-detail.fullPage {
    -webkit-overflow-scrolling: touch;
    background: #fff;
    box-sizing: border-box;
    height: 100vh;
    overflow: scroll;
    padding-bottom: 340rpx;
    position: relative;
    width: 100vw;
    z-index: 199
}

.goods-detail.fullPage .goods-detail-content {
    font-size: 0;
    padding: 0 var(--theme-padding) 50rpx
}

.goods-detail.fullPage .goods-img {
    border-radius: 0;
    display: block;
    height: 564rpx;
    left: auto;
    position: relative;
    right: var(--theme-padding);
    width: 750rpx;
    z-index: 11
}

.goods-detail.fullPage .goods-desc {
    color: #aaa;
    font-size: 22rpx;
    margin-top: 16rpx;
    max-width: 100%;
    position: inherit
}

.goods-detail.fullPage .goods-section-top {
    background-color: #fff;
    box-sizing: border-box;
    margin-left: calc(0px - var(--theme-padding));
    padding-bottom: 24rpx;
    padding-left: var(--theme-padding);
    position: sticky;
    position: -webkit-sticky;
    top: 0rpx;
    width: 100vw;
    z-index: 10
}

.goods-detail.fullPage .mx-nav-bar {
    position: fixed
}

.goods-detail.fullPage .favorite-taste_box {
    position: relative;
    text-align: center;
    width: 132rpx
}

.goods-detail.fullPage .favorite-taste {
    height: 40rpx;
    width: 40rpx
}

.goods-detail.fullPage .auto-select-taste {
    background-color: rgba(0,0,0,.8);
    border-radius: 16rpx;
    bottom: -74rpx;
    padding: 16rpx 24rpx;
    position: absolute;
    right: 26rpx;
    width: -webkit-max-content;
    width: max-content
}

.goods-detail.fullPage .goods-section-spec {
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
    align-items: flex-start;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: calc(100% + var(--theme-padding))
}

.goods-detail.fullPage .select-item-title {
    box-sizing: border-box;
    color: #333;
    font-size: 26rpx;
    height: 46rpx;
    line-height: 30rpx;
    margin: 0;
    max-width: 92rpx;
    min-width: 92rpx;
    overflow: hidden;
    padding-right: 20rpx;
    padding-top: 20rpx
}

.goods-section-grey {
    border-top: 16rpx solid #f4f4f7;
    margin-left: calc(0px - var(--theme-padding));
    margin-right: calc(0px - var(--theme-padding))
}

.goods-detail.fullPage .goods-section-other {
    color: #333;
    font-size: 28rpx;
    font-weight: 500;
    padding: 24rpx 0
}

.goods-detail.fullPage .add-to-cart {
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    left: 0;
    padding-left: var(--theme-padding);
    padding-right: var(--theme-padding);
    position: fixed;
    width: 100%
}

.goods-detail.fullPage .share-btn {
    background: transparent!important;
    box-shadow: none!important;
    box-sizing: initial;
    height: 32px;
    line-height: 0;
    padding: 24rpx 0 24rpx var(--theme-padding);
    width: 32px
}

.goods-detail.fullPage .share-img {
    height: 32px;
    width: 32px
}

.goods-detail .select-item-title {
    color: #777;
    font-size: 24rpx;
    margin-top: 32rpx
}

.goods-detail .goods-attrs,.goods-detail .goods-cups,.goods-detail .goods-specs {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap
}

.goods-detail.fullPage .goods-attrs,.goods-detail.fullPage .goods-cups,.goods-detail.fullPage .goods-specs {
    padding-bottom: 16rpx
}

.goods-detail .select-item,.goods-detail .spec-item {
    -webkit-box-pack: center;
    border: 1px solid #e6e6e6;
    border-radius: 12rpx;
    box-sizing: border-box;
    color: #777;
    font-size: 26rpx;
    height: 64rpx;
    -webkit-justify-content: center;
    justify-content: center;
    line-height: 64rpx;
    margin: 24rpx 24rpx 0 0;
    min-width: calc(33.33% - 24rpx);
    padding: 0 10rpx;
    text-align: center
}

.goods-detail .select-item,.goods-detail .spec-item {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: inline-flex;
    position: relative
}

.goods-detail .spec-item {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    min-width: calc(50% - 24rpx);
    padding: 0 2rpx
}

.goods-detail.fullPage .select-item {
    box-sizing: border-box;
    margin: 0 24rpx 24rpx 0;
    min-width: 186rpx
}

.goods-detail.fullPage .select-item,.goods-detail.fullPage .spec-item {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    padding: 0 var(--theme-padding);
    text-align: left
}

.goods-detail.fullPage .spec-item {
    margin: 0 0 24rpx;
    min-width: 606rpx
}

.goods-detail.fullPage .spec-item-name {
    position: relative
}

.goods-detail.fullPage .spec-item-icon {
    width: 170rpx
}

.goods-detail .goods-specs .iconfont {
    font-size: 48rpx
}

.goods-detail .spec-item .spec-btns {
    height: 40rpx;
    width: 40rpx
}

.goods-detail.center .spec-item .number-icon {
    background: #e60012;
    border-radius: 8rpx 8rpx 8rpx 0;
    box-sizing: border-box;
    height: 30rpx;
    padding: 0;
    right: -8rpx;
    top: -20rpx;
    width: 30rpx
}

.goods-detail .select-item.active,.goods-detail .spec-item.active {
    background: #fff7f8;
    border-color: #ffbfc6;
    color: #e60012
}

.goods-detail .icon-btn {
    padding: 0
}

.goods-detail .disabled.icon-btn,.goods-detail .disabled.select-item {
    color: #ccc
}

.goods-detail .disabled.icon-btn {
    pointer-events: none
}

.goods-detail.fullPage .add-to-cart .icon-doubt {
    font-size: 24rpx
}

.rule-box {
    padding: 32rpx 32rpx 0;
    text-align: justify;
    white-space: pre-wrap
}

.rule-page {
    -webkit-overflow-scrolling: touch;
    max-height: 480rpx;
    overflow: scroll
}

.close-btn,.text-center {
    text-align: center
}

.close-btn {
    color: var(--theme-color);
    font-size: 32rpx;
    padding: 20rpx 0
}
