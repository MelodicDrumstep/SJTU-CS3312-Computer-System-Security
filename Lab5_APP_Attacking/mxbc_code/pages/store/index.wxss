page {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    height: 100vh;
    overflow: hidden
}

.top_container {
    padding: 0 24rpx 12rpx;
    position: relative
}

.tabs {
    width: 432rpx!important
}

.to-search {
    background-color: #f5f5f5;
    border-radius: 200rpx;
    height: 60rpx;
    width: 180rpx
}

.map_container {
    height: 520rpx;
    overflow: hidden;
    position: relative;
    width: 100%
}

.location-tips {
    background: var(--bg-theme-light-color);
    color: #333;
    font-size: 24rpx;
    font-weight: 400;
    height: 64rpx;
    padding: 0 24rpx
}

.openSetting {
    background: #e60012;
    border-radius: 8rpx;
    color: #fff;
    font-size: 22rpx;
    font-weight: 500;
    height: 48rpx;
    width: 96rpx
}

.to-location-icon {
    bottom: 18px;
    height: 28px;
    position: absolute;
    right: 10px;
    width: 28px;
    z-index: 9
}

.shop_container {
    -webkit-overflow-scrolling: touch;
    -webkit-box-flex: 1;
    background-color: #f8f8f8;
    -webkit-flex: 1;
    flex: 1;
    overflow-x: hidden;
    overflow-y: scroll;
    padding: 24rpx
}

.shop-empty {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    height: 100%
}

.shop-detail-container {
    background-color: #fff;
    padding: 104rpx var(--theme-padding) 48rpx
}

.shop-detail-container,.shop-detail-tip {
    border-radius: var(--card-radius) var(--card-radius) 0 0
}

.shop-detail-tip {
    background-color: var(--bg-theme-light-color);
    height: 80rpx;
    left: 0;
    padding-left: var(--theme-padding);
    position: absolute;
    right: 0;
    top: 0
}

.detail-map {
    border-radius: var(--card-radius);
    height: 400rpx;
    margin: 16rpx 0 24rpx;
    overflow: hidden;
    width: 100%
}

.disagree-tip {
    color: #333;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 36rpx;
    margin: 0 auto;
    text-align: center;
    width: 432rpx
}

.sagree-img {
    height: 486rpx;
    margin: 256rpx 0 0;
    width: 486rpx
}

.agree-btn {
    background: #e60012;
    border-radius: 16rpx;
    color: #fff;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 88rpx;
    margin: 102rpx auto 0;
    width: 384rpx
}

.no-location-permission {
    color: #777;
    text-align: center;
    width: 100vw
}
