page {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    background-color: #f5f5f5;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    height: 100vh;
    line-height: 34rpx;
    overflow: hidden
}

.top {
    height: 422rpx;
    position: relative
}

.header-bg {
    height: 422rpx;
    position: absolute;
    width: 100%
}

.page_bar_container {
    position: fixed;
    top: 0;
    width: 100%
}

.page_bar {
    color: #fff;
    left: 0;
    padding: 22rpx 30rpx;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 20
}

.page_title {
    -webkit-box-flex: 1;
    color: #fff;
    -webkit-flex-grow: 1;
    flex-grow: 1;
    font-size: 32rpx;
    font-weight: 700;
    margin-right: 74rpx;
    text-align: center
}

.contactUs {
    height: 60rpx;
    position: absolute;
    right: 200rpx;
    top: 96rpx;
    width: 60rpx;
    z-index: 10
}

.img-order-status {
    bottom: 74rpx;
    height: 180rpx;
    position: absolute;
    right: 24rpx;
    width: 260rpx
}

.order-title {
    box-sizing: border-box;
    color: #fff;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 50rpx;
    padding-left: 48rpx;
    padding-top: 180rpx;
    position: absolute;
    width: 100%
}

.order-title-sub {
    display: block;
    font-size: 24rpx;
    line-height: 40rpx;
    max-width: 60%
}

.c-text-color {
    color: #777
}

.bottom {
    -webkit-box-flex: 1;
    -webkit-overflow-scrolling: touch;
    background: -webkit-linear-gradient(top,#fff,#f5f5f5 56%,#f5f5f5);
    background: linear-gradient(180deg,#fff,#f5f5f5 56%,#f5f5f5);
    border-radius: 24rpx 24rpx 4rpx 4rpx;
    -webkit-flex: 1;
    flex: 1;
    margin-top: -74rpx;
    overflow-y: scroll;
    position: relative
}

.bottom::after {
    content: "";
    display: block;
    height: 140rpx
}

.card {
    background-color: #fff;
    border-radius: var(--card-radius);
    margin-left: 32rpx;
    margin-right: 32rpx;
    padding: 24rpx;
    position: relative
}

.card .mb11:last-child {
    margin-bottom: 0!important
}

.shop-address {
    width: 484rpx
}

.title {
    color: #333;
    line-height: 44rpx
}

.shop_item_contact_icon {
    height: 50rpx;
    margin-left: 24rpx;
    width: 50rpx
}

.border-bottom-dashed {
    border-bottom: 2rpx dashed #e6e6e6;
    margin-top: 24rpx
}

.activityName {
    background: var(--bg-theme-light-color);
    border-radius: 4rpx;
    font-size: 22rpx;
    font-weight: 400;
    line-height: 32rpx;
    padding: 4rpx
}

.sum {
    margin-top: 28rpx;
    text-align: right
}

.left-width {
    -webkit-box-flex: 0;
    -webkit-flex-grow: 0;
    flex-grow: 0;
    -webkit-flex-shrink: 0;
    flex-shrink: 0;
    width: 140rpx
}

.bottom-btn-cancel {
    background: transparent;
    border: 2rpx solid #e4e4e4;
    box-shadow: none;
    color: #333;
    font-weight: 400;
    margin-right: auto;
    width: 260rpx
}

.skeleton-title {
    height: 30rpx;
    margin-bottom: 10rpx;
    width: 200rpx
}

.skeleton-sub-title {
    height: 24rpx;
    margin-top: 14rpx;
    width: 300rpx
}

.skeleton-price {
    height: 30rpx;
    width: 100rpx
}

.skeleton-amount {
    height: 20rpx;
    width: 40rpx
}

.header_tag {
    background: #fff7e8;
    border-radius: 6rpx;
    color: #ff9f00;
    display: inline-block;
    font-size: 20rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    vertical-align: middle;
    width: 36rpx
}

.product_footer {
    -webkit-box-pack: justify;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 28rpx;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    margin: 14rpx 0
}

.product_label_l {
    color: #777;
    font-size: 26rpx;
    line-height: 18px
}

.product_label_r {
    color: #333;
    font-size: 28rpx;
    line-height: 20px
}

.icon-doubt {
    color: #777;
    margin-left: 10rpx;
    margin-right: 20rpx;
    vertical-align: middle
}

.shadow {
    box-shadow: 0 8rpx 36rpx 0 rgba(0,0,0,.05),0 -8rpx 24rpx 0 rgba(0,0,0,.05)
}

.confirm-dialog {
    padding-top: 40rpx;
    text-align: center;
    width: 560rpx
}

.pop-title {
    color: #333;
    line-height: 36rpx;
    padding: 24rpx 24rpx 40rpx
}

.cancel-btn,.confirm-btn {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    line-height: 90rpx
}

.circle {
    background-color: #f8f8fa;
    border-radius: 50%;
    bottom: -16rpx;
    height: 32rpx;
    position: absolute;
    width: 32rpx
}

.left-circle {
    left: -40rpx
}

.right-circle {
    right: -40rpx
}
