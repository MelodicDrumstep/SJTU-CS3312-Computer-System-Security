page {
    background-color: #f5f5f5
}

.container {
    color: #777;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    padding-bottom: 200rpx
}

.card {
    background-color: #fff;
    border-radius: var(--card-radius);
    margin: 24rpx 32rpx 0;
    padding: 24rpx 24rpx 0;
    position: relative
}

.title {
    color: #333;
    font-size: 32rpx;
    font-weight: 500
}

.cont,.title {
    line-height: 44rpx
}

.cont {
    color: #777;
    font-size: 26rpx;
    font-weight: 400
}

.sel-1 {
    color: #bbb;
    font-size: 28rpx;
    font-weight: 500;
    line-height: 40rpx;
    padding: 48rpx 0 24rpx
}

.radio-label {
    -webkit-box-pack: justify;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.radio-text {
    color: #333!important;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx
}

.rotate-270 {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg)
}

wx-radio {
    -webkit-transform: scale(.85);
    transform: scale(.85)
}

.other-reason {
    padding-bottom: 24rpx
}

.reason {
    padding: 0!important
}

.bottom {
    background-color: #fff;
    bottom: 0;
    height: 120rpx;
    position: fixed;
    width: 100%;
    z-index: 66
}
